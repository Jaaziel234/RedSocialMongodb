<div class="row">

  <div class="col-md-4 offset-md-4">

    {{#if success}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      {{success}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    {{/if}}

    <div class="card bg-dark mt-5">
      <div class="card-body ">
        <h1 class="text-light text-center">Inicia sesión</h1>
        <form action="/auth/signin" method="POST">
          <div class="form-group">
            <input type="text" name="email" class="form-control" placeholder="youremail@company.com" autofocus>
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Contraseña">
          </div>
          <button class="btn btn-success btn-block">
            Iniciar Sesion
          </button>
          <p class="text-white mt-4 justify-content">Al continuar con tu correo  aceptas los TERMINOS y CONDICIONES y el aviso de privacidad.</p>
        </form>
      </div>
    </div>
  </div>
</div>